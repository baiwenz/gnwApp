<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/et_searchbox"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:backgroundTint="@color/gus_you_like"
        android:orientation="horizontal"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:background="#eee">
        <ImageView
            android:background="@drawable/saoyisao"
            android:layout_width="@dimen/px28"
            android:layout_height="@dimen/px24"
            android:layout_marginLeft="@dimen/px4"
            android:layout_marginRight="@dimen/px12"/>
        <com.example.commonlibrary.utils.EditText_Clear
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/px4"
            android:layout_marginBottom="@dimen/px4"
            android:layout_height="@dimen/px24"
            android:layout_weight="264"
            android:background="@color/gray_e0e0e0"
            android:drawablePadding="0dp"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:hint="搜索"
            android:textColorHint="#999"
            android:gravity="start|center_vertical"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            />
        <ImageView
            android:background="@drawable/ma"
            android:layout_width="@dimen/px24"
            android:layout_height="@dimen/px24"
            android:layout_marginLeft="@dimen/px12"
            android:layout_marginRight="@dimen/px8"/>
    </LinearLayout>
    <com.example.commonlibrary.utils.MyScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px160">

            </android.support.v7.widget.RecyclerView>


            <LinearLayout
                android:layout_marginTop="@dimen/px5"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:padding="@dimen/px5"
                    android:textSize="@dimen/px16"
                    android:textColor="@color/tip_in_gus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_in_gus"/>
                <TextView
                    android:id="@+id/text_gus_you_like"
                    android:padding="@dimen/px5"
                    android:textSize="@dimen/px16"
                    android:textStyle="italic"
                    android:textColor="@color/gus_you_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gus_you_like"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

            <!--<com.example.commonlibrary.utils.UnScrollListView-->
                <!--android:background="@null"-->
                <!--android:id="@+id/list_gus_you_like"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->
            <!--</com.example.commonlibrary.utils.UnScrollListView>-->
        </LinearLayout>
    </com.example.commonlibrary.utils.MyScrollView>
</LinearLayout>