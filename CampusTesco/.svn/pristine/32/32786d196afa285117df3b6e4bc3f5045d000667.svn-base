<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/px24"
                android:layout_height="@dimen/px24"
                android:layout_marginTop="@dimen/px170"
                android:layout_marginLeft="@dimen/px70"
                android:src="@drawable/user"/>

            <ImageView
                android:layout_width="@dimen/px24"
                android:layout_height="@dimen/px24"
                android:layout_marginTop="@dimen/px34"
                android:layout_marginLeft="@dimen/px70"
                android:src="@drawable/password"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/text1"
            android:layout_width="@dimen/px200"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px12"
            android:layout_marginTop="@dimen/px166"
            android:drawableLeft="@drawable/sanjiao"
            />

        <EditText
            android:id="@+id/text2"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px12"
            android:layout_marginTop="6dp" />


    </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="@dimen/px260"
        android:layout_height="@dimen/px40"
        android:layout_marginLeft="@dimen/px60"
        android:layout_marginTop="@dimen/px30"
        android:background="@drawable/button_circle_shape"
        android:text="@string/login"
        android:textSize="@dimen/px20"
        android:textColor="#FF0000" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/px45"
            android:textSize="@dimen/px12"
            android:text="忘记密码"/>
        <Button
            android:id="@+id/gotoregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/px120"
            android:textSize="@dimen/px12"
            android:text="立即注册"
            android:textColor="#FF4444"/>
    </LinearLayout>
</LinearLayout>
