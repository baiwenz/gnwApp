<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_index_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px74"
    android:background="@drawable/index_menu_list"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/grid_index_menu_img"
        android:layout_width="@dimen/px50"
        android:layout_height="@dimen/px50"
        android:src="@drawable/history_bg_border"/>
    <TextView
        android:id="@+id/grid_index_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px24"
        android:gravity="center_vertical"
        android:text="菜单1"/>
</LinearLayout>