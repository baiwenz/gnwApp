<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/iteam_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
       <LinearLayout
           android:layout_marginTop="@dimen/px5"
           android:id="@+id/shop_line"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="clip_vertical">
           <ImageView
               android:id="@+id/shop_img"
               android:layout_width="@dimen/px45"
               android:layout_height="@dimen/px45"
               android:src="@color/colorPrimary"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/shop_name"
                   android:layout_width="@dimen/px200"
                   android:layout_height="@dimen/px25"
                   android:text="这里是商店名字  〉"/>
               <TextView
                   android:id="@+id/order_date"
                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/px20"
                   android:text="2019-5-3 13:55"/>
           </LinearLayout>
           <TextView
               android:id="@+id/order_state"
               android:gravity="right"
               android:layout_alignParentRight="true"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginRight="@dimen/px10"
               android:text="订单已送达"/>
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px30"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/goods_name"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/px45"
                android:text="青椒肉丝盖饭"/>
            <TextView
                android:id="@+id/order_all_price"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px35"
                android:text="￥ 12.5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/opt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px25"
            android:orientation="horizontal"
            android:gravity="right">
            <TextView
                android:id="@+id/order_again"
                android:background="@drawable/order_list_button_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px10"
                android:text="再来一单"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>