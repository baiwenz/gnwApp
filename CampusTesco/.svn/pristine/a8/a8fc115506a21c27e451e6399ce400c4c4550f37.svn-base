<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/iteam_gus_you_like"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gus_shop_img"
            android:layout_width="@dimen/px90"
            android:layout_height="@dimen/px90"
            android:src="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90"
            android:layout_marginLeft="@dimen/px10"
            android:orientation="vertical">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/gus_good_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20"
                android:text="这里是商品名字"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px25"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:textColor="@color/gus_you_like"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px25"
                    android:text="原价 "/>
                <TextView
                    android:gravity="center_vertical"
                    android:textColor="@color/gus_you_like"
                    android:id="@+id/gus_shop_last_price"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px25"
                    android:text="￥888"/>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px5"
                    android:textColor="@color/gus_you_like"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px25"
                    android:text="优惠价 "/>
                <TextView
                    android:gravity="center_vertical"
                    android:textColor="@color/gus_you_like"
                    android:id="@+id/gus_shop_now_price"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px25"
                    android:text="￥777"/>
            </LinearLayout>

            <TextView
                android:gravity="center_vertical"
                android:textColor="@color/gus_you_like"
                android:id="@+id/gus_shop_decscripe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px25"
                android:text="这里添加描述"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/gus_shop_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20"
                android:text="这里添加商店"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>