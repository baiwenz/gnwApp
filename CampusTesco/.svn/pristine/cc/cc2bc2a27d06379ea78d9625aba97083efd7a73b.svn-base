<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:paddingTop="@dimen/px8"
        android:paddingBottom="@dimen/px8"
        android:id="@+id/activity_text"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/px24"
        android:text="@string/activity_name" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:text="热卖商品"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px8"
        android:textSize="@dimen/px16"
        android:layout_marginBottom="@dimen/px4"/>
    <ImageView
        android:background="@drawable/news3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px240" />
    <TextView
        android:text="猜你喜欢"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px8"
        android:textSize="@dimen/px16"
        android:layout_marginBottom="@dimen/px4"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>