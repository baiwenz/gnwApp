package com.example.homelibrary.Adapater;

import android.content.Context;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.BaseAdapter;
import android.widget.ImageView;
import android.widget.LinearLayout;
import android.widget.TextView;
import android.widget.Toast;

import com.example.homelibrary.R;
import com.example.commonlibrary.bean.IndexMenu;

import java.util.List;

public class GridIndexMenuAdapater extends BaseAdapter{
    private Context context;
    private List<IndexMenu> indexMenuList;
    private ViewHolder viewHolder;
    public GridIndexMenuAdapater(Context context, List<IndexMenu> indexMenuList) {
        this.context = context;
        this.indexMenuList = indexMenuList;
    }
    @Override
    public int getCount() {
        return this.indexMenuList.size();
    }

    @Override
    public Object getItem(int position) {
        return indexMenuList.get(position);
    }

    @Override
    public long getItemId(int position) {
        return position;
    }

    @Override
    public View getView(int position, View convertView, ViewGroup parent) {
        final IndexMenu indexMenu = indexMenuList.get(position);
        if(convertView==null){
            viewHolder = new ViewHolder();
            convertView= LayoutInflater.from(context).inflate(R.layout.grid_index_menu,null);
            viewHolder.grid_index_menu_layout=convertView.findViewById(R.id.grid_index_menu_layout);
            viewHolder.grid_index_menu_title=convertView.findViewById(R.id.grid_index_menu_title);
            viewHolder.grid_index_menu_img=convertView.findViewById(R.id.grid_index_menu_img);
            convertView.setTag(viewHolder);
        }else {
            viewHolder=(ViewHolder)convertView.getTag();
        }
        viewHolder.grid_index_menu_img.setImageResource(R.drawable.ic_search);
        viewHolder.grid_index_menu_title.setText(indexMenu.getTitle().trim());
        viewHolder.grid_index_menu_layout.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Toast.makeText(context,indexMenu.getTitle(),Toast.LENGTH_SHORT).show();
            }
        });
        return convertView;
    }
    private class ViewHolder{
        LinearLayout grid_index_menu_layout;
        ImageView grid_index_menu_img;
        TextView grid_index_menu_title;

    }
}
