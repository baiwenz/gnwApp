<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Index.LocatAreaActivity"
    android:orientation="vertical"
    >
    <!--搜索顶部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:id="@+id/status_bar_fix"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/saoyisao_green"
            />
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/px50"
            android:background="@color/saoyisao_green"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_search_return"
                android:layout_width="@dimen/px30"
                android:layout_height="@dimen/px30"
                android:src="@drawable/ic_return"
                />
            <EditText
                android:id="@+id/sv_area"
                android:layout_width="@dimen/px240"
                android:layout_height="@dimen/px30"
                app:iconifiedByDefault="true"
                android:layout_marginLeft="@dimen/px60"
                android:background="@color/white"
                />
        </Toolbar>

    </LinearLayout>
    <!--搜索提示-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_search_tip"
                android:layout_width="@dimen/px103"
                android:layout_height="@dimen/px30"
                android:layout_marginLeft="@dimen/px15"
                android:text="@string/area_tip"
                android:textSize="@dimen/px20"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/tv_search_area"
                android:layout_width="@dimen/px90"
                android:layout_height="@dimen/px30"
                android:text="六盘水"
                android:textSize="@dimen/px20"
                android:textStyle="bold"
                android:textColor="#000000"
                />
        </LinearLayout>

    </LinearLayout>

    <!--展示各市的所有县区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_search_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDDDDD"
            android:layout_marginLeft="@dimen/px15"
            android:layout_marginRight="@dimen/px15"

            android:overScrollMode="never"
            />
    </LinearLayout>

</LinearLayout>