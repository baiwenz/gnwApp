<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Index.LocatAreaActivity"
    android:orientation="vertical"
    >
    <!--搜索顶部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:id="@+id/status_bar_fix"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/saoyisao_green"
            />
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/px50"
            android:background="@color/saoyisao_green"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_search_return"
                android:layout_width="@dimen/px30"
                android:layout_height="@dimen/px30"
                android:src="@drawable/ic_return"
                />
            <EditText
                android:id="@+id/sv_area"
                android:layout_width="@dimen/px240"
                android:layout_height="@dimen/px30"
                app:iconifiedByDefault="true"
                android:layout_marginLeft="@dimen/px60"
                android:background="@color/white"
                />
        </Toolbar>

    </LinearLayout>
    <!--搜索提示-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_search_tip"
                android:layout_width="@dimen/px103"
                android:layout_height="@dimen/px30"
                android:layout_marginLeft="@dimen/px15"
                android:text="@string/area_tip"
                android:textSize="@dimen/px20"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/tv_search_area"
                android:layout_width="@dimen/px90"
                android:layout_height="@dimen/px30"
                android:text="六盘水"
                android:textSize="@dimen/px20"
                android:textStyle="bold"
                android:textColor="#000000"
                />
        </LinearLayout>

    </LinearLayout>
    <!--搜索区域-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#DDDDDD"
        >
        <!--最近访问-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px40"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px15"
                android:text="@string/last_looking"
                android:textSize="@dimen/px20"
                android:textStyle="bold" />
        </LinearLayout>
        <!--最近访问市/县区-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_search_last_visit1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px40"
                    android:layout_marginLeft="@dimen/px15"
                    android:text="@string/area_zunyi"
                    android:textSize="@dimen/px20"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_search_last_visit2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px40"
                    android:layout_marginLeft="@dimen/px15"
                    android:text="@string/area_zunyi"
                    android:textSize="@dimen/px20"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_search_last_visit3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px40"
                    android:layout_marginLeft="@dimen/px15"
                    android:layout_marginRight="@dimen/px15"
                    android:text="@string/area_zunyi"
                    android:textSize="@dimen/px20"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        <!--热门地点-->
        <LinearLayout
            android:layout_marginTop="@dimen/px10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px40"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px15"
                android:text="@string/hot_spots"
                android:textSize="@dimen/px20"
                android:textStyle="bold" />
        </LinearLayout>
        <!--热门市/县区-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
           <android.support.v7.widget.RecyclerView
               android:id="@+id/rv_search_hot_spots"
               android:layout_marginLeft="@dimen/px15"
               android:layout_marginRight="@dimen/px15"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:overScrollMode="never"
               >

           </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <!--展示各市的所有县区-->
        <LinearLayout
            android:layout_marginTop="@dimen/px10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_search_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px15"
                android:layout_marginRight="@dimen/px15"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>