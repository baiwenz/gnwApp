<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_index_cla"
        android:layout_marginLeft="@dimen/px12"
        android:layout_marginRight="@dimen/px12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_index_cla_pic"
            android:layout_width="@dimen/px50"
            android:layout_height="@dimen/px50"
            android:src="@drawable/module_fruit1"
            />
            <TextView
                android:id="@+id/tv_index_cla_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px20"
                android:gravity="center"
                android:textStyle="normal"
                android:textSize="@dimen/px15"
                android:text="@string/area_zunyi"
                />



    </LinearLayout>
</LinearLayout>