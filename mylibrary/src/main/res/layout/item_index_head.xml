<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--轮播图-->
        <LinearLayout
            android:id="@+id/ll_index_slideshow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px150"
            android:layout_marginTop="@dimen/px5"
            >
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px150"
                />
        </LinearLayout>
        <!--模块分类-->
        <LinearLayout
            android:id="@+id/ll_index_module_classification"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px150"
            android:gravity="center_vertical"
            android:orientation="vertical">
           <!-- 第一栏模块分类-->
            <LinearLayout
                android:id="@+id/ll_index_module_classification_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px75"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_index_module1"
                    android:layout_width="@dimen/px75"
                    android:layout_height="@dimen/px75"
                    android:layout_marginLeft="@dimen/px7"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_module_no1"
                        android:layout_width="@dimen/px50"
                        android:layout_height="58dp"
                        android:src="@drawable/module_fruit2" />

                    <TextView
                        android:id="@+id/tv_module_no1"
                        android:layout_width="@dimen/px75"
                        android:layout_height="@dimen/px20"
                        android:gravity="center"
                        android:text="@string/area_zunyi"
                        android:textSize="@dimen/px15" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_index_module2"
                    android:layout_width="@dimen/px75"
                    android:layout_height="@dimen/px75"
                    android:layout_marginLeft="@dimen/px7"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_module_no2"
                        android:layout_width="@dimen/px50"
                        android:layout_height="58dp"
                        android:src="@drawable/module_fruit4" />

                    <TextView
                        android:id="@+id/tv_module_no2"
                        android:layout_width="@dimen/px75"
                        android:layout_height="@dimen/px20"
                        android:gravity="center"
                        android:text="@string/area_zunyi"
                        android:textSize="@dimen/px15" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_index_module3"
                    android:layout_width="@dimen/px75"
                    android:layout_height="@dimen/px75"
                    android:layout_marginLeft="@dimen/px7"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_module_no3"
                        android:layout_width="@dimen/px50"
                        android:layout_height="58dp"
                        android:src="@drawable/module_fruit1" />

                    <TextView
                        android:id="@+id/tv_module_no3"
                        android:layout_width="@dimen/px75"
                        android:layout_height="@dimen/px20"
                        android:gravity="center"
                        android:text="@string/area_zunyi"
                        android:textSize="@dimen/px15" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_index_module4"
                    android:layout_width="@dimen/px75"
                    android:layout_height="@dimen/px75"
                    android:layout_marginLeft="@dimen/px7"
                    android:layout_marginRight="@dimen/px7"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_module_no4"
                        android:layout_width="@dimen/px50"
                        android:layout_height="58dp"
                        android:src="@drawable/module_fruit3" />

                    <TextView
                        android:id="@+id/tv_module_no4"
                        android:layout_width="@dimen/px75"
                        android:layout_height="@dimen/px20"
                        android:gravity="center"
                        android:text="@string/area_zunyi"
                        android:textSize="@dimen/px15" />
                </LinearLayout>
            </LinearLayout>

            <!--第二栏模块分类-->
            <LinearLayout
                android:id="@+id/ll_index_module_classification_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px75"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_index_module5"
                    android:layout_width="@dimen/px75"
                    android:layout_height="@dimen/px75"
                    android:layout_marginLeft="@dimen/px7"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_module_no5"
                        android:layout_width="@dimen/px50"
                        android:layout_height="58dp"
                        android:src="@drawable/module_fruit4" />

                    <TextView
                        android:id="@+id/tv_module_no5"
                        android:layout_width="@dimen/px75"
                        android:layout_height="@dimen/px20"
                        android:gravity="center"
                        android:text="@string/area_zunyi"
                        android:textSize="@dimen/px15" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_index_module6"
                    android:layout_width="@dimen/px75"
                    android:layout_height="@dimen/px75"
                    android:layout_marginLeft="@dimen/px7"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_module_no6"
                        android:layout_width="@dimen/px50"
                        android:layout_height="58dp"
                        android:src="@drawable/module_fruit1" />

                    <TextView
                        android:id="@+id/tv_module_no6"
                        android:layout_width="@dimen/px75"
                        android:layout_height="@dimen/px20"
                        android:gravity="center"
                        android:text="@string/area_zunyi"
                        android:textSize="@dimen/px15" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_index_module7"
                    android:layout_width="@dimen/px75"
                    android:layout_height="@dimen/px75"
                    android:layout_marginLeft="@dimen/px7"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_module_no7"
                        android:layout_width="@dimen/px50"
                        android:layout_height="58dp"
                        android:src="@drawable/module_fruit3" />

                    <TextView
                        android:id="@+id/tv_module_no7"
                        android:layout_width="@dimen/px75"
                        android:layout_height="@dimen/px20"
                        android:gravity="center"
                        android:text="@string/area_zunyi"
                        android:textSize="@dimen/px15" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_index_module8"
                    android:layout_width="@dimen/px75"
                    android:layout_height="@dimen/px75"
                    android:layout_marginLeft="@dimen/px7"
                    android:layout_marginRight="@dimen/px7"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_module_no8"
                        android:layout_width="@dimen/px50"
                        android:layout_height="58dp"
                        android:src="@drawable/module_fruit2" />

                    <TextView
                        android:id="@+id/tv_module_no8"
                        android:layout_width="@dimen/px75"
                        android:layout_height="@dimen/px20"
                        android:gravity="center"
                        android:text="@string/area_zunyi"
                        android:textSize="@dimen/px15" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px150"

        >

    </ScrollView>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>